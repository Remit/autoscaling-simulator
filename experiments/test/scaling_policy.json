{
  "policy": {
    "sync_period": {
      "value": 30,
      "unit": "s"
    }
  },
  "application": {
    "services": [
      {
        "service_name": "default",
        "scaling_effect_aggregation_rule_name": "maxScale",
        "scaled_aspect_name": "count",
        "metrics_descriptions": [
          {
            "metric_source_name": "Service",
            "metric_name": "vCPU",
            "priority": 1,
            "initial_max_limit": 15,
            "initial_min_limit": 1,
            "related_service_to_consider": "previous",
            "correlator_conf": {
              "name": "linear",
              "config": {
                "history_buffer_size": {
                  "value": 2,
                  "unit": "m"
                },
                "max_time_lag": {
                  "value": 2,
                  "unit": "s"
                }
              }
            },
            "desired_aspect_value_calculator_conf": {
              "name": "ratio",
              "config": {
                "target_value": 0.05
              }
            },
            "values_filter_conf": {
              "name": "defaultNA",
              "config": {
                "default_value": 0.0
              }
            },
            "values_aggregator_conf": {
              "name": "avgAggregator",
              "config": {
                "resolution": {
                  "value": 400,
                  "unit": "ms"
                }
              }
            },
            "stabilizer_conf": {
              "name": "maxStabilizer",
              "config": {
                "resolution": {
                  "value": 400,
                  "unit": "ms"
                }
              }
            },
            "forecaster_conf": {
              "name": "simpleAvg",
              "config": {
                "averaging_interval": {
                  "value": 100,
                  "unit": "ms"
                }
              },
              "resolution": {
                "value": 10,
                "unit": "ms"
              },
              "history_data_buffer_size": 20,
              "horizon_in_steps": 5
            }
          }
        ]
      }
    ]
  }
}
