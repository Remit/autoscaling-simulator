{
  "policy": {
    "sync_period": {
      "value": 30,
      "unit": "s"
    }
  },
  "application": {
    "services": [
      {
        "service_name": "default",
        "scaling_effect_aggregation_rule_name": "maxScale",
        "scaled_aspect_name": "count",
        "metrics_descriptions": [
          {
            "metric_source_name": "Service",
            "metric_name": "vCPU",
            "priority": 1,
            "initial_max_limit": 15,
            "initial_min_limit": 1,
            "related_service_to_consider": "previous",
            "correlator_conf": {
              "name": "linear",
              "config": {
                "history_buffer_size": {
                  "value": 2,
                  "unit": "m"
                },
                "max_time_lag": {
                  "value": 2,
                  "unit": "s"
                }
              }
            },
            "desired_aspect_value_calculator_conf": {
                  "category": "learning",
                  "config": {
                      "fallback_calculator": {
                        "category": "rule",
                        "config": {
                          "name": "ratio",
                          "target_value": 0.05,
                          "adjustment_heuristic_conf": {
                            "name": "rescale",
                            "scaling_factor": 1.15
                          }
                        }
                      },
                      "model": {
                                "name": "stochastic_gradient_descent",
                                "kind": "online",
                                "model_params": {
                                    "loss": "squared_loss",
                                    "penalty": "l2",
                                    "alpha": 0.0001,
                                    "l1_ratio": 0.15,
                                    "max_iter": 1000,
                                    "tol": 0.001,
                                    "validation_fraction": 0.1,
                                    "n_iter_no_change": 5,
                                    "epsilon": 0.1
                                }
                            },
                      "performance_metric": {
                          "metric_source_name": "response_stats",
                          "metric_name": "buffer_time",
                          "submetric_name": "*",
                          "metric_type": "duration"
                      },
                      "model_quality_metric": {
                          "name": "mean_squared_error",
                          "threshold": 10
                      },
                      "minibatch_size": 2,
                      "optimizer_config": {
                          "method": "trust-constr",
                          "jac": "2-point",
                          "hess": "SR1",
                          "verbose": 0,
                          "maxiter": 100,
                          "xtolArg": 0.1,
                          "initial_tr_radius": 10
                      }
                  }
              },
            "values_filter_conf": {
              "name": "christiano_fitzgerald"
            },
            "values_aggregator_conf": {
              "name": "medianAggregator",
              "config": {
                "resolution": {
                  "value": 400,
                  "unit": "ms"
                }
              }
            },
            "stabilizer_conf": {
              "name": "maxStabilizer",
              "config": {
                "resolution": {
                  "value": 400,
                  "unit": "ms"
                }
              }
            },
            "forecaster_conf": {
              "name": "ssa",
              "config": {
                "n_components": 10
              },
              "forecast_frequency": "500ms",
              "history_data_buffer_size": 20,
              "horizon_in_steps": 5
            }
          }
        ]
      }
    ]
  }
}
