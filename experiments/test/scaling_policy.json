{
  "policy": {
    "sync_period": {
      "value": 30,
      "unit": "s"
    }
  },
  "application": {
    "structure": {},
    "services": [
      {
        "service_name": "default",
        "scaling_effect_aggregation_rule_name": "maxScale",
        "scaled_aspect_name": "count",
        "metrics_descriptions": [
          {
            "metric_source_name": "response_stats",
            "metric_name": "buffer_time",
            "submetric_name": "*",
            "metric_type": "duration",
            "metric_params": {
              "duration_unit": "ms"
            },
            "target_value": {
              "value": 100,
              "unit": "ms"
            },
            "priority": 1,
            "initial_max_limit": 15,
            "initial_min_limit": 1,
            "initial_service_representation_in_metric": 1,
            "values_filter_conf": {
              "name": "defaultNA",
              "config": {
                "default_value": 0.0
              }
            },
            "values_aggregator_conf": {
              "name": "avgAggregator",
              "config": {
                "resolution": {
                  "value": 400,
                  "unit": "ms"
                }
              }
            },
            "stabilizer_conf": {
              "name": "maxStabilizer",
              "config": {
                "resolution": {
                  "value": 400,
                  "unit": "ms"
                }
              }
            },
            "forecaster_conf": {
              "name": "reactive",
              "config": {
                "averaging_interval": {
                  "value": 100,
                  "unit": "ms"
                }
              },
              "resolution": {
                "value": 10,
                "unit": "ms"
              },
              "history_data_buffer_size": 20,
              "horizon_in_steps": 5
            }
          }
        ]
      }
    ]
  },
  "platform": {}
}
