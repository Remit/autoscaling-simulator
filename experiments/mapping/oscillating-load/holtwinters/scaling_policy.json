{
  "policy": {
    "sync_period": {
      "value": 15,
      "unit": "s"
    }
  },
  "application": {
    "services": [
      {
        "service_name": "default",
        "scaling_effect_aggregation_rule_name": "maxScale",
        "scaled_aspect_name": "count",
        "metrics_groups": [
              {
                  "name": "group1",
                  "priority": 1,
                  "initial_max_limit": 100,
                  "initial_min_limit": 1,
                  "desired_aspect_value_calculator_conf": {
                        "category": "learning",
                        "config": {
                            "fallback_calculator": {
                              "category": "rule",
                              "config": {
                                "name": "ratio",
                                "target": {
                                  "metric_name": "load",
                                  "value": 1,
                                  "resolution": {
                                    "value": 1,
                                    "unit": "s"
                                  }
                                }
                              }
                            },
                            "model": {
                                "name": "stochastic_gradient_descent",
                                "kind": "online",
                                "model_params": {
                                    "loss": "squared_loss",
                                    "penalty": "l2",
                                    "alpha": 0.0001,
                                    "l1_ratio": 0.15,
                                    "tol": 0.001,
                                    "validation_fraction": 0.1,
                                    "n_iter_no_change": 5,
                                    "epsilon": 0.1
                                }
                            },
                            "performance_metric": {
                                "metric_source_name": "response_stats",
                                "metric_name": "response_time",
                                "submetric_name": "*",
                                "metric_type": "duration",
                                "threshold": {
                                    "value": 100,
                                    "unit": "ms"
                                }
                            },
                            "model_quality_metric": {
                                "name": "mean_squared_error",
                                "threshold": 10
                            },
                            "minibatch_size": 2,
                            "optimizer_config": {
                                "method": "trust-constr",
                                "jac": "2-point",
                                "hess": "SR1",
                                "verbose": 0,
                                "maxiter": 100,
                                "xtol": 0.1,
                                "initial_tr_radius": 10
                            }
                        }
                    },
                  "stabilizer_conf": {
                    "name": "maxStabilizer",
                    "config": {
                      "resolution": {
                        "value": 30,
                        "unit": "s"
                      }
                    }
                  },
                  "metrics": [
                      {
                        "metric_source_name": "Load",
                        "metric_name": "load",
                        "submetric_name": "*",
                        "metric_params": {
                          "sampling_interval": {
                            "value": 1,
                            "unit": "s"
                          }
                        }
                      }
                  ],
                  "default_metric_config" : {
                    "values_filter_conf": {
                      "name": "defaultNA",
                      "config": { "default_value": 0 }
                    },
                    "values_aggregator_conf": {
                      "name": "sumAggregator",
                      "config": {
                        "resolution": {
                          "value": 500,
                          "unit": "ms"
                        }
                      }
                    },
                    "forecaster_conf": {
                          "name": "holt_winters",
                          "config": {
                              "seasonal": "add",
                              "smoothing_seasonal": 1.0,
                              "seasonal_periods": 60,
                              "smoothing_level": 0.7
                          },
                          "forecast_frequency": "500ms",
                          "history_data_buffer_size": {
                            "value": 10,
                            "unit": "m"
                          },
                          "fit_model_when_history_amount_reached": {
                            "value": 30,
                            "unit": "s"
                          },
                          "horizon_in_steps": 400
                      }
                  }
              }
        ]
      }
    ]
  }
}
