{
  "policy": {
    "sync_period": {
      "value": 15,
      "unit": "s"
    }
  },
  "application": {
    "services": [
      {
        "service_name": "default",
        "scaling_effect_aggregation_rule_name": "maxScale",
        "scaled_aspect_name": "count",
        "metrics_groups": [
              {
                  "name": "group1",
                  "priority": 1,
                  "initial_max_limit": 100,
                  "initial_min_limit": 1,
                  "desired_aspect_value_calculator_conf": {
                    "category": "rule",
                    "config": {
                      "name": "ratio",
                      "target": {
                        "metric_name": "response_time",
                        "value": 100,
                        "unit": "ms"
                      },
                      "adjustment_heuristic_conf": {
                        "name": "rescale",
                        "scaling_factor": 1.15
                      }
                    }
                  },
                  "stabilizer_conf": {
                    "name": "maxStabilizer",
                    "config": {
                      "resolution": {
                        "value": 30,
                        "unit": "s"
                      }
                    }
                  },
                  "metrics": [
                      {
                        "metric_source_name": "response_stats",
                        "metric_name": "response_time",
                        "submetric_name": "*",
                        "metric_params": {
                          "duration_unit": "ms"
                        }
                      }
                  ],
                  "default_metric_config" : {
                    "values_filter_conf": {
                      "name": "defaultNA",
                      "config": { "default_value": 0 }
                    },
                    "values_aggregator_conf": {
                      "name": "avgAggregator",
                      "config": {
                        "resolution": {
                          "value": 1,
                          "unit": "s"
                        }
                      }
                    },
                    "forecaster_conf": {
                          "name": "arima",
                          "config": {
                              "p": 2,
                              "d": 1,
                              "q": 6
                          },
                          "forecast_frequency": "500ms",
                          "history_data_buffer_size": {
                            "value": 10,
                            "unit": "m"
                          },
                          "fit_model_when_history_amount_reached": {
                            "value": 1,
                            "unit": "s"
                          },
                          "horizon_in_steps": 400
                      }
                  }
              }
        ]
      }
    ]
  }
}
